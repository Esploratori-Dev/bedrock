{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "target": "esnext",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}